{
    "manifest_version": 2,
    "name": "Github Issue/PR Viewed Button",
    "version": "1.0.0",
    "description": "It adds viewed button to issue and pull request pages on github",
    "permissions": [
        "tabs",
        "storage",
        "<all_urls>",
        "contextMenus"
    ],
    "content_scripts": [{
        "css": [
            "frontend/styles.css"
        ],
        "js": [
            "frontend/globalFunctions.js",
            "frontend/dataStorage.js",
            "frontend/content.js",
            "frontend/detailPage.js"
        ],
        "matches": [
            "<all_urls>"
        ]
    }],
    "background": {
        "scripts": [
            "background/background.js",
            "background/contextMenu.js"
        ]
    },
    "icons": { "16": "icon.png",
        "48": "icon.png",
       "128": "icon.png" }
}